    "eslint-plugin-react": "^7.32.2",
    "postcss": "^8.4.19",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.0",
    "prisma": "^4.8.0",
    "tailwindcss": "^3.2.4",
