{
  "private": true,
  "name": "pheedback",
  "description": "",
  "license": "",
  "scripts": {
    "build:css": "tailwindcss -m -i app/styles/app.css -o app/styles/tailwind.css",
    "build": "npm run build:css && remix build",
    "check-format": "npm run prettier -- --list-different",
    "check-types": "tsc",
    "dev:css": "tailwindcss -w -i app/styles/app.css -o app/styles/tailwind.css",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "format": "npm run prettier -- --write",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx .",
    "postinstall": "remix setup node",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|ts|tsx)\"",
    "validate": "npm run check-types && npm run check-format && npm run lint && npm run build"
  },
  "dependencies": {
    "@formkit/auto-animate": "^1.0.0-beta.1",
    "@prisma/client": "^4.3.1",
    "@radix-ui/react-dialog": "^1.0.0",
    "@radix-ui/react-popover": "^1.0.0",
    "@radix-ui/react-tabs": "^1.0.0",
    "@remix-run/react": "^1.7.0",
    "@remix-run/serve": "^1.7.0",
    "@remix-run/vercel": "^1.7.2",
    "bcrypt": "5.0.1",
    "boring-avatars": "^1.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix": "^1.6.7"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.0",
    "@types/bcrypt": "^5.0.0",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.40.0",
    "autoprefixer": "^10.4.12",
    "concurrently": "^7.4.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.31.8",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "prisma": "^4.3.1",
    "tailwindcss": "^3.1.8",
    "tailwindcss-animate": "^1.0.5",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=14"
  },
  "resolutions": {
    "@types/react": "^18.0.15"
  },
  "sideEffects": false
}
