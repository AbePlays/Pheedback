{
  "private": true,
  "name": "pheedback",
  "description": "",
  "license": "MIT",
  "scripts": {
    "build:css": "tailwindcss -m -i app/styles/app.css -o app/styles/tailwind.css",
    "build": "npm run build:css && remix build",
    "check-format": "npm run prettier -- --list-different",
    "check-types": "tsc",
    "dev:css": "tailwindcss -w -i app/styles/app.css -o app/styles/tailwind.css",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "format": "npm run prettier -- --write",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx .",
    "postinstall": "prisma generate",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|ts|tsx)\"",
    "validate": "npm run check-types && npm run check-format && npm run lint && npm run build"
  },
  "dependencies": {
    "@formkit/auto-animate": "^1.0.0-beta.6",
    "@prisma/client": "^4.14.1",
    "@radix-ui/react-dialog": "^1.0.3",
    "@radix-ui/react-popover": "^1.0.5",
    "@radix-ui/react-tabs": "^1.0.3",
    "@remix-run/node": "^1.16.1",
    "@remix-run/react": "^1.16.1",
    "@remix-run/serve": "^1.16.1",
    "@remix-run/v1-route-convention": "^0.1.1",
    "@remix-run/vercel": "^1.16.1",
    "bcrypt": "5.1.0",
    "boring-avatars": "^1.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.16.1",
    "@types/bcrypt": "^5.0.0",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.1.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.32.2",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "prisma": "^4.15.0",
    "tailwindcss": "^3.3.2",
    "tailwindcss-animate": "^1.0.5",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
