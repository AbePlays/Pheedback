    "@radix-ui/react-tabs": "^1.0.2",
    "@remix-run/node": "^1.8.0",
    "@remix-run/react": "^1.9.0",
    "@remix-run/serve": "^1.8.0",
    "@remix-run/vercel": "^1.8.0",
    "bcrypt": "5.1.0",
    "boring-avatars": "^1.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
