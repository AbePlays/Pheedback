generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id           String    @id @default(uuid())
  fullname     String
  username     String    @unique
  email        String    @unique
  passwordHash String
  posts        Post[]
  comments     Comment[]
  upvotes      Upvote[]
}

model Post {
  id        String    @id @default(uuid())
  title     String
  category  String
  detail    String
  createdAt DateTime  @default(now())
  status    String    @default("Suggestion")
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  comments  Comment[]
  upvotes   Upvote[]

  @@index([userId])
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id])
  postId    String
  user      User     @relation(fields: [userId], references: [id])
  userId    String

  @@index([postId])
  @@index([userId])
}

model Upvote {
  id     String @id @default(uuid())
  User   User   @relation(fields: [userId], references: [id])
  userId String
  Post   Post   @relation(fields: [postId], references: [id])
  postId String

  @@index([userId])
  @@index([postId])
}
